<div class="container">
  <div class="row justify-content-center">
    <div class="col-7">
      <%= render 'shared/errors', obj: @video_game %> 
      <%= form_with model: @video_game, class: "shadow p-3 mb-3 bg-info rounded", local: true do |f| %>
        <div class="form_group row">
          <%= f.label :name, class: "col-2 col-form-label text-dark" %>
          <div class="col-9">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Title of video_game" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-dark" %>
          <div class="col-9">
            <br>
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of video_game" %>
          </div>
        </div>
        <br>
        <div class="form-group row">
          <%= f.label :category, class: "col-2 col-form-label text-dark" %>
          <div class="col-9 mb-4">
            <%= f.collection_select(:category_ids, Category.all, :id, :name,
            { prompt: "Make your selection from the list below (can be empty)"}, { multiple: true, size: 3, class: "form-select shadow rounded"}) %>
          </div>
          <br>
          <br>
        <div class="form-group row">
          <%= f.label :image_path, "Image URL:", class: "col-2 col-form-label text-dark" %>
          <div class="col-9 mb-4">
          <%=f.text_area :image_path, class: "form-control shadow rounded" %>
          </div>
        </div>
        <br>
        <div class="d-flex justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>