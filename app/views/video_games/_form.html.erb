<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %> 
      <%= form_with model: obj: @video_game, class: "shadow p-3 mb-3 bg-info rounded", local: true do |f| %>
        <div class="form_group row">
          <%= f.label :name, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of video_game" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <br>
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of video_game" %>
          </div>
        </div>
        
        <div class="form-group justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
    <%= link_to '[ Cancel and return to video games listing ]', video_games_path, class: "text-info" %>
   </div>
  </div>
</div>