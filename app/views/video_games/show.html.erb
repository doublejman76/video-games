<h2 class="text-center mt-4"><%= @video_game.name %></h2>
    
<div class="container">
    <div class="row justify-content-md-center">
      <div class="col-6 mt-4">
        <div class="card text-center shadow mb-5 rounded custom-bg-dark">
          <%= image_tag @video_game.image_path, class: "card-img-top" %>
          </div>
          <div class="card-body">
            <div class="card-text"><%= simple_format(@video_game.description) %></div>
            <%= link_to "Edit", edit_video_game_path(@video_game), class: "btn btn-outline-info" %>
            <%= link_to "Delete", video_game_path(@video_game), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(@video_game.created_at) %> ago,
              edited <%= time_ago_in_words(@video_game.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  </div>
