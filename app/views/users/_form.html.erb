<div class="container">
    <div class="row justify-content-center">
      <div class="col-10">
        <%= render 'shared/errors' %> 
        <%= form_with model: obj: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true do |f| %>
          <div class="form_group row">
            <%= f.label :username, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
            </div>
          </div>
  
          <div class="form-group row">
            <%= f.label :email, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <br>
              <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
            </div>
          </div>
          
          <div class="form-group justify-content-center">
            <%= f.submit class: "btn btn-outline-light btn-lg" %>
          </div>
        <% end %>
      </div>
      <div class="mb-3">
      <%= link_to '[ Cancel and return to video games listing ]', video_games_path, class: "text-info" %>
     </div>
    </div>
  </div>