<h1 class="text-center mt-4">Arcade Games</h1>

<div class="flickr_pagination">
  <%= will_paginate @video_games, :container => false %>
</div>

<div class="container">
    <% @video_games.each do |category| %>
      <div class="row justify-content-md-center">
        <div class="col-4 mt-4">
          <div class="card text-center shadow mb-5 custom-bg-dark rounded">
            <div class="card-body">
              <h5 class="card-title text-decoration-none"><%= link_to video_game.name, category_path(category), class: "text-success" %></h5>
            </div>
            <div class="card-footer text-muted">
              <small>Created <%= time_ago_in_words(video_game.created_at) %> ago,
               edited <%= time_ago_in_words(video_game.updated_at) %> ago</small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="flickr_pagination mb-4">
    <%= will_paginate @video_games, :container => false %>
</div>