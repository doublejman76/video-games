<h1 class="text-center mt-8">Create a new Category!</h1>
<div class="container">
    <div class="row justify-content-center">
      <div class="col-6">
        <%= render 'shared/errors', obj: @category %> 
        <%= form_with model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true do |f| %>
          <div class="form_group row">
            <%= f.label :name, "Category name", class: "col-3 mb-4 col-form-label text-light" %>
            <div class="col-6">
              <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
            </div>
          </div>

          <div class="d-flex justify-content-center">
            <%= f.submit class: "btn btn-outline-light btn-lg" %>
          </div>
        <% end %>
      </div>
      <div class="mb-5">
     </div>
    </div>
  </div>